<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
	<head lang="en" th:include="views/commonHeader :: header">
</head>

<body>

<div th:insert="views/commonMenu :: header"></div>

<hr />

<div class="container-fluid">
	<div class="row">
		
		<div th:insert="views/commonColumns :: blankCol"></div>
		
		<div class="col-sm-2 alert alert-secondary">
			<div th:insert="views/commonForm :: formTimeSeries"></div>
		</div>
		
		<div class="col-sm-0">
			&nbsp;
		</div> 
	
		<div th:if="${#strings.equals(error,'')}" class="col-sm-5 alert alert-info">
			<h2>Fluctuations</h2>
			<table class="table">
				<thead>
					<th>Currency</th>
					<th:block th:each="fluctuation, iStat : ${fluctuations}" th:if="${iStat.index <= 0}">
						<th th:text="${fluctuation.startDate}" class="text-right"></th>
						<th th:text="${fluctuation.endDate}" class="text-right"></th>
					</th:block>
					<th class="text-right">Change</th>
					<th class="text-right">Change (%)</th>
				</thead>
				<tbody>
				<tr th:each="fluctuation : ${fluctuations}">
					<td th:text="${fluctuation.targetCurrency}"></td>
					<td class="text-right">
						<span th:inline="text">[[${#numbers.formatDecimal(fluctuation.startRate, 1, 'COMMA', 6, 'POINT')}]]</span>&nbsp;<span th:text="${fluctuation.baseCurrency}"></span>
					</td>
					<td class="text-right">
						<span th:inline="text">[[${#numbers.formatDecimal(fluctuation.endRate, 1, 'COMMA', 6, 'POINT')}]]</span>&nbsp;<span th:text="${fluctuation.baseCurrency}"></span>
					</td>
					<td class="text-right">
						<span th:inline="text">[[${#numbers.formatDecimal(fluctuation.change, 1, 'COMMA', 6, 'POINT')}]]</span>&nbsp;<span th:text="${fluctuation.baseCurrency}"></span>
					</td>
					<td class="text-right">
						<span th:inline="text">[[${#numbers.formatDecimal(fluctuation.changePct*100, 0, 'COMMA', 2, 'POINT')}]]</span>&nbsp;%
					</td>
				</tr>
				</tbody>
			</table>
		</div>
		
		<div th:insert="views/commonError :: error"></div>
		
		<div th:insert="views/commonColumns :: blankCol"></div>
		
		<div th:insert="views/commonJson :: json"></div> 
		
	</div>
</div>
    

<script src="/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="/misc/jsonformat/jsonFormat.js"></script>
<script src="/jquery/3.3.1/jquery-3.3.1.min.js"></script>
<script src="/jquery-ui/1.12.1/jquery-ui.min.js"></script>
<div th:switch="${endpoint}"> 
	<div th:case="history" class="form-group row">
		<script>
		</script>
	</div>
</div>
<script th:inline="javascript">
/*<![CDATA[*/
$(document).ready(function() {
    var jsonContent = /*[[${WebResponse}]]*/ "";
    var disp = document.getElementById("jsonRaw");
    disp.innerHTML = "<pre>" + formatJson(jsonContent) + "</pre>";
});
$( function() {
    $( "#start_date" ).datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: 'yy-mm-dd'
      });
    $( "#end_date" ).datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: 'yy-mm-dd'
      });
} );
/*]]>*/
</script>
</body>
</html>